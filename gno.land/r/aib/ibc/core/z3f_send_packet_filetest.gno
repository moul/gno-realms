		SourceClient:     clientID,
		TimeoutTimestamp: uint64(ctx.Time.Add(time.Hour).Unix()),
		Payloads: []types.Payload{{
			SourcePort:      "transfer",
			DestinationPort: "transfer",
			Encoding:        "application/json",
			Value:           []byte("{}"),
			Version:         "v1",
		}},
	}
	core.SendPacket(cross, nil, packet)
